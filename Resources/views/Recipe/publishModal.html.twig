{% extends 'IbtikarGlanceDashboardBundle::baseModal.html.twig' %}

{% block modalHeader %}
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3 class="modal-title">{{'publish reciope'|trans}}</h3>
{% endblock %}

{% block modalBody %}

    <div class="modal-body">

        <div class="row">
            <div class="col-lg-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" class="styled" name="publishLocation">
                        Daily solutions
                    </label>
                </div>


            </div>
        </div>

        <hr>

        <div class="row">
            <div class="form-group">

                <label class="control-label col-lg-12">وقت النشر</label>
                <div class="col-lg-12">
                    <div class='input-group date' id='datetimepicker1'>
                        <input type='text' class="form-control open-datetimepicker" name="publishDate"/>
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                        </span>
                    </div>


                </div>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
                <div class="checkbox">
                    <label>
                        <input type="checkbox" class="styled" name="publishNow" id="publishNow" >
                        نشر الان
                    </label>
                </div>


            </div>
        </div>


    </div>


{% endblock %}

{% block modalFooter %}
    <button type="button" class="btn btn-link" data-dismiss="modal">الغاء</button>

    <button type="button" class="btn btn-primary dev-save-columns">
        {{'Save'|trans}}
    </button>
{% endblock %}



{% block javascript %}
    <script type="text/javascript" src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/pages/components_modals.js')}}"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/date/moment.js')}}" type="text/javascript"></script>
    <script src="{{ asset('bundles/ibtikarshareeconomydashboarddesign/js/plugins/date/bootstrap-datetimepicker.min.js')}}" type="text/javascript"></script>
    <script>
        var toggleButtonColor = '#D6494C';
            var dateToday = new Date();
        $(function () {
            $('#datetimepicker1').datetimepicker({  minDate: dateToday});
        });


        $('.open-datetimepicker').click(function (event) {
            event.preventDefault();
            $('#datetimepicker1 .input-group-addon').click();
        });


    </script>
{% endblock %}