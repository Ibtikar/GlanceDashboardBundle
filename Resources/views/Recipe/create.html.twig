                                </ul>
                            </td>
                            <td style="width: 300px" data-name="%name%">
                                %uploadButton%
                                %cropButton%
                                %deleteButton%


                            </td>

                        </tr>

    {% endset %}
     {% set uploadButton %}
        <a class="btn btn-defualt upload-image-modal-open dev-upload-image"  > رفع الصورة</a>
     {% endset %}
     {% set cropButton %}
        <a class="btn btn-defualt dev-crop-images"    data-image-id="%image-id%" data-crop-url="%crop-url%">  رفع الصورة </a>
     {% endset %}
