{% block content %}
    <div class="portlet">
        <div class="portlet-header">
            <h3>
                <i class="fa fa-tasks"></i>
                {{ block('title') }}
            </h3>
        </div> <!-- /.portlet-header -->

        <div class="portlet-content">
            {% block form_container %}
                {{ form(form) }}
            {% endblock %}

            <div class="form-group">
                <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="progress-button dev-padding-progress-btn" data-style="fill" data-horizontal="">
                    {% block submitButtonLabel %}{% trans %}Save{% endtrans %}{% endblock %}
                    </button>
                </div>
            </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
   {{ parent() }}
    <script>

        function msieversion() {
            var rv = -1;
            if (navigator.appName === 'Microsoft Internet Explorer') {
                var ua = navigator.userAgent;
                var re = new RegExp("MSIE ([0-9]{1,}[\.0-9]{0,})");
                if (re.exec(ua) !== null)
                    rv = parseFloat(RegExp.$1);
            } else if (navigator.appName === 'Netscape') {
                var ua = navigator.userAgent;
                var re = new RegExp("Trident/.*rv:([0-9]{1,}[\.0-9]{0,})");
                if (re.exec(ua) !== null)
                    rv = parseFloat(RegExp.$1);
            }
            return rv;
        }

        jQuery(document).ready(function($) {
            $('body').on('keydown', '.dev-image-input', function(e) {
                if(msieversion() > 0 && e.keyCode === 13) {
                    $('.dev-image-input').click();
                }
            });
        });

        var avatarImageUrl = '{{ asset('design/admin-panel/img/avatars/avatar-large-1.jpg') }}';
        var coverImageUrl = '{{ asset('design/admin-panel/img/avatars/image-large.jpg') }}';
        var listMessages = {
                deleteImage : '{% trans from translationDomain %}Are you sure you want to delete this image{% endtrans %}',
                DeleteImageTitle: '{% trans from translationDomain %}Delete Image{% endtrans %}'
            };
    </script>
{% endblock %}
